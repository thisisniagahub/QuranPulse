{
  "expo": {
    "name": "QuranPulse",
    "slug": "quranpulse",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "quranpulse",
    "userInterfaceStyle": "dark",
    "primaryColor": "#0f5132",
    "description": "QuranPulse - Your Spiritual Companion. Follow the pulse of the Quran with modern features.",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.quranpulse.app"
    },
    "android": {
      "package": "com.quranpulse.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f5132"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "VIBRATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0f5132"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
